<!-- Include Alpine.js -->
<script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>

<div x-data="{ showmenu: false }" class="p-4 fixed w-full bg-light-green z-50">
  <div id="navbar" class="flex flex-row justify-between items-center">
    <!-- Logo and Desktop Menu -->
    <div class="flex flex-row items-center gap-10">
      <div id="logo">
        <a href="/#"><img src="/logo.svg" class="w-[90px] md:w-[170px]" alt="pic1" /></a>
      </div>
      <nav id="desktopmenu" class="hidden lg:flex gap-10 text-white text-menu">
        <a href="/#" class="hover:underline hover:text-light-yellow">Forside</a>
        <a href="howToCleanup" class="hover:underline hover:text-light-yellow">Sådan gør du</a>
      </nav>
    </div>

    <!-- Burger Menu and Button -->
    <div class="flex items-center gap-4">
      <!-- Desktop Button -->
      <a href="/bidrag">
        <div id="desktop-button" class="shareresults_button hidden lg:flex justify-center p-16 hover:scale-110"></div>
      </a>

      <!-- Burger Menu Button -->
      <button id="burgermenu" class="lg:hidden text-white" x-on:click="showmenu = !showmenu">
        <!-- Burger Icon (3 lines) -->
        <svg x-show="!showmenu" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
        <!-- Close Icon -->
        <svg x-show="showmenu" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <nav id="mobilmenu" class="fixed top-0 left-0 w-full h-full flex flex-col text-white text-menu bg-light-green z-40" x-show="showmenu" x-transition>
      <!-- Close Button (X) -->
      <button class="absolute top-8 right-4" x-on:click="showmenu = false">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
      <!-- Menu Links -->
      <ul class="mt-16">
        <li class="text-center py-4 border-b-2 hover:text-light-yellow"><a href="/#">Forside</a></li>
        <li class="text-center py-4 border-b-2 hover:text-light-yellow"><a href="howToCleanup">Sådan gør du</a></li>
      </ul>
    </nav>
  </div>
</div>
